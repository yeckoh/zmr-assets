$sequence "reload1" {
	"rifle/reload1.smd"
	activity "ACT_VM_RELOAD_START" 1
	fadein 0.2
	fadeout 0.2
	fps 45
}

$sequence "reload2" {
	"rifle/reload2.smd"
	activity "ACT_VM_RELOAD" 1
	{ event AE_CL_PLAYSOUND 18 "Weapon_Rifle_ZM.Reload" }
	{ event AE_WPN_INCREMENTAMMO 20 "" }
	fadein 0.2
	fadeout 0.2
	fps 55
}

$sequence "reload3" {
	"rifle/reload3.smd"
	activity "ACT_VM_RELOAD_FINISH" 1
	fadein 0.2
	fadeout 0.2
	fps 35
}

$sequence "lever" {
	"rifle/lever.smd"
	activity "ACT_SHOTGUN_PUMP" 1
	{ event 6001 28 "1" }
	{ event AE_CL_PLAYSOUND 0 "Weapon_Rifle_ZM.Special1" }
	fadein 0.2
	fadeout 0.2
	fps 50
}

$sequence "dryfire" {
	"rifle/dryfire.smd"
	activity "ACT_VM_DRYFIRE" 1
	fadein 0.2
	fadeout 0.2
	fps 60
}
